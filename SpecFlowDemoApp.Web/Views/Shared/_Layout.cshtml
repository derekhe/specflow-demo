<!DOCTYPE html>
<html>
<head>
  <title>@ViewBag.Title - Spec Flow Demo App</title>
  <link href="@Url.Content("~/Content/bootstrap.min.css")" rel="stylesheet" type="text/css" />
</head>
<body>
  <div class="navbar">
    <div class="navbar-inner">
      <div class="container">
        <a class="brand" href="@Url.Content("~/")">Spec Flow Demo App</a>
        <ul class="nav">
          <li>@Html.ActionLink("More Complicated Form", "UserProfile", "Home")</li>
        </ul>
        @if (User.Identity.IsAuthenticated)
        { 
        <ul class="nav pull-right">
          <li>
            <a href="@Url.Action("Logout", "Authentication")">
              <i class="icon-off icon-white"></i>
              Logout
            </a>
          </li>
        </ul>
        }
      </div>
    </div>
  </div>
  <div class="container">
    @RenderBody()
  </div>
</body>
</html>
